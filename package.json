{
    "name": "trepid-ink",
    "displayName": "Trepid Ink",
    "description": "A color theme, designed to mix well with vscode its interface. Inspired by Trepid",
    "version": "0.2.0",
    "license": "GPL-3.0",
    "publisher": "Squeeble",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Themes",
        "Formatters"
    ],
    "keywords": [
        "comment",
        "comments",
        "theme",
        "highlight",
        "highlighter",
        "comment higlighter",
        "comments higlighter"
    ],
    "contributes": {
        "themes": [
            {
                "label": "Trepid Ink",
                "uiTheme": "vs-dark",
                "path": "./themes/TrepidInk-color-theme.json"
            }
        ],
        "configuration": {
            "title": "Trepid Ink",
            "properties": {
                "trepid-ink.comments": {
                    "description": "All / Block / Single / No comment highlights",
                    "default": "All",
                    "type": "string"
                },
                "trepid-ink.tags": {
                    "description": "Create extra tags to hilight other information or in an other color",
                    "default": [
                        {
                          "style": {
                            "color": "#6bf7f7"
                          },
                          "tag": "NOTE"
                        },
                        {
                          "style": {
                            "color": "#ff893a"
                          },
                          "tag": "TODO"
                        },
                        {
                          "style": {
                            "color": "#ff3333"
                          },
                          "tag": "FixMe"
                        }
                    ],
                    "type": "array"
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SqueebleInk/VSC-THM-TrepidInk.git"
    },
    "bugs": {
        "url": "https://github.com/SqueebleInk/VSC-THM-TrepidInk/issues"
    },
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "out/extension.js",
    "icon": "assets/logo.png",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "typescript": "^3.6.4",
        "tslint": "^5.20.0",
        "vscode-test": "^1.2.2"
    }
}
