{
  "name": "trepid-ink",
  "displayName": "Trepid Ink",
  "description": "A color theme, designed to mix well with vscode its interface. Inspired by Trepid",
  "version": "0.2.4",
  "license": "GPL-3.0",
  "publisher": "Squeeble",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Themes",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "comment",
    "comments",
    "theme",
    "highlight",
    "highlighter",
    "comment higlighter",
    "comments higlighter",
    "trepid",
    "deco-it",
    "deco it",
    "decorate",
    "decorate it",
    "decorate-it"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Trepid Ink",
        "uiTheme": "vs-dark",
        "path": "./themes/TrepidInk-color-theme.json"
      }
    ],
    "configuration": {
      "title": "Trepid Ink",
      "properties": {
        "trepid-ink.comments": {
          "description": "All / Block / Single / No comment highlights",
          "default": "All",
          "type": "string"
        },
        "trepid-ink.tags": {
          "description": "Create extra tags to hilight other information or in an other color",
          "default": [
            {
              "style": {
                "color": "#6bf7f7"
              },
              "tag": "NOTE"
            },
            {
              "style": {
                "color": "#ff893a"
              },
              "tag": "TODO"
            },
            {
              "style": {
                "color": "#ff3333"
              },
              "tag": "FixMe"
            }
          ],
          "type": "array"
        },
        "trepid-ink.delay": {
          "description": "Delay it takes to style the comments",
          "default": 100,
          "type": "number"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/squeeble-ink/vscode.trepid-ink.git"
  },
  "bugs": {
    "url": "https://github.com/squeeble-ink/vscode.trepid-ink/issues"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:css",
    "onLanguage:cpp",
    "onLanguage:ino"
  ],
  "main": "out/extension.js",
  "icon": "assets/logo.png",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.5",
    "mocha": "^8.1.2",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2"
  }
}
